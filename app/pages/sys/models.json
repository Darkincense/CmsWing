{
  "type": "page",
  "asideSticky": true,
  "cssVars": {
    "--Page-aside-width": "250px",
    "--Page-body-padding":0
  },
  "css": {
    ".cxd-AppBcn": {
      "display": "none"
    },
    ".amis-scope .cxd-TableCell-searchPopOver":{
      "min-width": "auto"
    }
  },
  "aside": [
    {
      "type":"page",
      "title": "模型管理",
  "remark": "bla bla bla",
  "toolbar": [
    {
      "type": "button",
      "actionType": "dialog",
      "label": "新增模型",
      "icon": "fa fa-plus pull-left",
      "primary": true,
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "sample-edit-form",
          "api": "post:/amis/api/sample",
          "body": [
            {
              "type": "input-text",
              "name": "engine",
              "label": "Engine",
              "required": true
            },
            {
              "type": "divider"
            },
            {
              "type": "input-text",
              "name": "browser",
              "label": "Browser",
              "required": true
            },
            {
              "type": "divider"
            },
            {
              "type": "input-text",
              "name": "platform",
              "label": "Platform(s)",
              "required": true
            },
            {
              "type": "divider"
            },
            {
              "type": "input-text",
              "name": "version",
              "label": "Engine version"
            },
            {
              "type": "divider"
            },
            {
              "type": "input-text",
              "name": "grade",
              "label": "CSS grade"
            }
          ]
        }
      }
    }
  ],
  "body":  {
    "type": "picker",
    "name": "models_id",
    "joinValues": true,
    "valueField": "id",
    "labelField": "engine",
    "label": false,
    "source": "https://aisuda.bce.baidu.com/amis/api/sample",
    "value": "1",
    "embed": true,
    "pickerSchema": {
      "mode": "table",
      "name": "thelist",
      "autoFillHeight":true,
      "perPage":1000,
      "footerToolbar":[{
        "type": "tpl",
        "tpl": "当前有 ${count} 个模型。",
        "className": "v-middle pl-3"
      }],
      "headerToolbar":false,
      "columns": [
        {
          "name": "engine",
          "label": "模型",
          "sortable": true,
          "searchable": true,
          "type": "text"
        },
        {
          "type": "operation",
          "label": "操作",
          "width":41,
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "dialog",
              "dialog": {
                "title": "查看",
                "body": {
                  "type": "form",
                  "body": [
                    {
                      "type": "static",
                      "name": "engine",
                      "label": "Engine"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "name": "browser",
                      "label": "Browser"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "name": "platform",
                      "label": "Platform(s)"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "name": "version",
                      "label": "Engine version"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "name": "grade",
                      "label": "CSS grade"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "html",
                      "html": "<p>添加其他 <span>Html 片段</span> 需要支持变量替换（todo）.</p>"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "confirmText": "您确认要删除?",
              "api": "delete:/amis/api/sample/$id"
            }
          ]
        }
      ]
    }
  }
    }
  
  ],
  "body": [
    {
      "type": "service",
      "body": [
        {
          "type": "tabs",
          "visibleOn": "${models_id>0}",
          "tabsMode": "sidebar",
          "sidePosition": "right",
          "showTip":true,
          "tabs": [
            {
              "title": "基础",
              "icon":"fa-solid fa-table",
              "body": {
                "type": "service",
                "schemaApi": "get:/admin/pages/sys/datalist.json?model=${models_id}"
              }
            },
            {
              "title": "字段",
              "icon":"fa-solid fa-table-columns",
              "body": {
                "type": "service",
                "schemaApi": "get:/admin/pages/sys/datalist.json?model=${models_id}"
              }
            },
            {
              "title": "索引",
              "icon":"fa-solid fa-trowel-bricks",
              "body": "选项卡内容3"
            },
            {
              "title": "关联",
              "icon":"fa-solid fa-arrows-down-to-people",
              "body": "选项卡内容3"
            }
          ]
        },
        {
          "type": "wrapper",
          "visibleOn": "${!models_id}",
          "body": {
            "type": "alert",
            "title": "系统提示",
            "body": "请选择左侧的模型进行编辑",
            "level": "info",
            "className": "mb-3"
          }
        }
        
      ]
    }
  ]
}